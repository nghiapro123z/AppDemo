@model ICollection<Category>

    <div class="container text-center mt-3">
        @*   nhận và hiển thị dữ liệu của TempData gửi từ Controller  *@
        @if (@TempData["Info"] != null)
   {
        <p class="alert alert-danger mt-3 mb-3">@TempData["Info"]</p>
   }
        <table class="table table-bordered">
            <tr>
                <th colspan="3" class="text text-success h2">Category</th>
                <th>
                    <a class="btn btn-primary"
                       asp-controller="Category" asp-action="Add">Add</a>
                </th>
            </tr>
            <tr>
                <th>Category Id</th>
                <th>Category Name</th>
                <th>Menu</th>
            </tr>
            @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>
                    <a asp-controller="Category" asp-action="Detail" asp-route-id="@category.Id">
                        @category.Name
                    </a>
                </td>
                <td>
                    <a class="btn btn-warning" asp-controller="Category"
                       asp-action="Edit" asp-route-id="@category.Id">
                        Edit
                    </a>
                    <a class="btn btn-danger" asp-controller="Category"
                       asp-action="Delete" asp-route-id="@category.Id"
                       onclick="    return confirm('Do you want to delete this category ?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
        </table>
    </div>
