@model AppDemo.Models.Category

<div class="container text-center mt-3">
    <form class="card p-3 bg-light" asp-controller="Category" asp-action="Add" method="post">
        <h3 class="text text-danger">Add new category</h3>
        <div class="form-group">
            <label asp-for="Name" class="text text-success"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text text-danger"></span>
        </div>

        
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Add" />
        </div>
    </form>
</div>